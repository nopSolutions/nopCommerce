@model AbcPromoProductSearchModel

@using Nop.Plugin.Misc.AbcCore.Areas.Admin.Models

@{
    //page title
    ViewBag.PageTitle = "Promo Products";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("ABCWarehouse.Promos");

    Layout = "_AdminLayout";
}

<div class="content-header clearfix">
    <h1 class="pull-left">
        Products - @Model.AbcPromoName
        <small>
            <i class="fa fa-arrow-circle-left"></i>
            <a href="~/Admin/AbcPromo/List">Back to Promo list</a>
        </small>
    </h1>
</div>

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    @await Html.PartialAsync("Table", new DataTablesModel
                    {
                        Name = "abcpromoproducts-grid",
                        UrlRead = new DataUrl("Products", "AbcPromo", null),
                        Length = Model.PageSize,
                        LengthMenu = Model.AvailablePageSizes,
                        ColumnCollection = new List<ColumnProperty>
                        {
                            new ColumnProperty(nameof(AbcPromoProductModel.AbcItemNumber))
                            {
                                Title = "Item Number",
                                Width = "50"
                            },
                            new ColumnProperty(nameof(AbcPromoProductModel.Name))
                            {
                                Title = "Name",
                                Width = "200"
                            },
                            new ColumnProperty(nameof(AbcPromoProductModel.Brand))
                            {
                                Title = "Brand",
                                Width = "100"
                            },
                            new ColumnProperty(nameof(AbcPromoProductModel.Published))
                            {
                                Title = "Published",
                                Width = "50",
                                ClassName = NopColumnClassDefaults.CenterAll,
                                Render = new RenderBoolean(),
                            },
                            new ColumnProperty(nameof(AbcPromoProductModel.IsABC))
                            {
                                Title = "ABC",
                                Width = "50",
                                ClassName = NopColumnClassDefaults.CenterAll,
                                Render = new RenderBoolean(),
                            },
                            new ColumnProperty(nameof(AbcPromoProductModel.IsHawthorne))
                            {
                                Title = "Hawthorne",
                                Width = "50",
                                ClassName = NopColumnClassDefaults.CenterAll,
                                Render = new RenderBoolean(),
                            }
                        }
                    })                    
                </div>
            </div>
        </div>
    </div>
</div>