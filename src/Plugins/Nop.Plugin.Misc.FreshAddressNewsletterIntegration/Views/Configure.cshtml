@model FreshAddressNewsletterIntegrationModel
@using Nop.Plugin.Misc.FreshAddressNewsletterIntegration.Models

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="FreshAddressNewsletterIntegration" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                FreshAddress Settings
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-12">
                        <p>Use the information provided from FreshAddress.</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="CompanyId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CompanyId" />
                        <span asp-validation-for="CompanyId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ContractId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ContractId" />
                        <span asp-validation-for="ContractId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>