@model ProductDetailsModel

@if (Model.HasSampleDownload)
{
    <div class="dwonload">
        <div class="btn btn-default download-sample">
            <span class="download-sample-button">
                <a href="@Url.RouteUrl("GetSampleDownload", new { productid = Model.Id })">@T("Products.DownloadSample")</a>
            </span>
        </div>
    </div>
}