@model IList<ProductTagModel>

@if (Model.Count > 0)
{
    <div class="product-tags-box">
        <div class="product-tags-list">
            <ul class="nav nav-pills">
                @for (var i = 0; i < Model.Count; i++)
                {
                    <li class="label label-default">
                        <a href="@Url.RouteUrl("ProductsByTag", new { Model[i].SeName })" class="label producttag">
                            @Model[i].Name<span> @T("Products.Tags.Count", Model[i].ProductCount)</span>
                        </a>

                    </li>
                    if (i != Model.Count - 1)
                    {
                        <li class="separator">, </li>
                    }
                }
            </ul>
        </div>
    </div>
}
