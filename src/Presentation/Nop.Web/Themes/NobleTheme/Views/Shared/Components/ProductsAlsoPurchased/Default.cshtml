@model IList<ProductOverviewModel>

@if (Model.Count > 0)
{
    <div class="also-purchased-products-grid">
        @if (Model.Count <= 3)
        {
            <div class="title panel-heading">
                <h2>@T("Products.AlsoPurchased")</h2>
            </div>
        }
        else
        {
            <div class="title panel-heading responsive-title">
                <h2>@T("Products.AlsoPurchased")</h2>
            </div>
        }
        <div class="row">
            @if (Model.Count <= 3)
            {
                foreach (var item in Model)
                {
                    <div class="item-box product-grid col-xs-12 col-sm-4 col-md-4 product-align clearfix">
                        <div class="thumbnail">
                            @await Html.PartialAsync("_ProductBox", item)
                        </div>
                    </div>
                }
            }
            else
            {
                <div id="also-purchased-products-slider" class="also-purchased-products-slider owl-carousel owl-theme">
                    @foreach (var item in Model)
                    {
                        <div class="item-box product-grid col-xs-12 col-sm-12 col-md-12 product-align clearfix">
                            <div class="thumbnail">@await Html.PartialAsync("_ProductBox", item)</div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}