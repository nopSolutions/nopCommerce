@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
<div class="product-grid home-page-product-grid">
    <div class="title sub-title">
        <strong>@T("Homepage.Products")</strong>
    </div>
    <div class="row">
        @if (Model.Count <= 4)
        {
            foreach (var item in Model)
            {
                <div class="item-box product-grid col-xs-12 col-sm-4 col-md-3 clearfix">
                    <div class="thumbnail">
                        @await Html.PartialAsync("_ProductBox", item)
                    </div>
                </div>
            }
        }
        else
        {
            <div id="home-features-slider" class="home-features-slider owl-carousel owl-theme">
                @foreach (var item in Model)
                {
                    <div class="item-box product-grid col-xs-12 col-sm-12 col-md-12 clearfix">
                        <div class="thumbnail">
                            @await Html.PartialAsync("_ProductBox", item)
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
}