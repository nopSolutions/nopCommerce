@model WishlistEmailAFriendModel
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.WishlistEmailAFriend").Text);
    //page class
    Html.AppendPageCssClassParts("html-email-a-friend-page");
}
<div class="page email-a-friend-page">
    <div class="page-title panel-heading">
        <h1>@T("Wishlist.EmailAFriend.Title")</h1>
    </div>
    <div class="page-body">
        @if (Model.SuccessfullySent)
        {
            <div class="alert alert-success">
                @Model.Result
            </div>
        }
        else
        {
            <form asp-route="EmailWishlist" method="post">
                <div asp-validation-summary="ModelOnly" class="message-error"></div>
                <div class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-sm-3 col-md-3 control-label" asp-for="FriendEmail" asp-postfix=":"></label>
                        <div class="col-sm-5 col-md-5">
                            <input asp-for="FriendEmail" class="friend-email form-control" placeholder="@T("Wishlist.EmailAFriend.FriendEmail.Hint")" />
                        </div>
                        <div class="col-sm-3 col-md-3">
                            <span asp-validation-for="FriendEmail"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-md-3 control-label" asp-for="YourEmailAddress" asp-postfix=":"></label>
                        <div class="col-sm-5 col-md-5">
                            <input asp-for="YourEmailAddress" class="your-email form-control" placeholder="@T("Wishlist.EmailAFriend.YourEmailAddress.Hint")" />
                        </div>
                        <div class="col-sm-3 col-md-3">
                            <span asp-validation-for="YourEmailAddress"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-md-3 control-label" asp-for="PersonalMessage" asp-postfix=":"></label>
                        <div class="col-sm-5 col-md-5">
                            <textarea asp-for="PersonalMessage" class="personal-message form-control" placeholder="@T("Wishlist.EmailAFriend.PersonalMessage.Hint")"></textarea>
                        </div>
                        <div class="col-sm-3 col-md-3">
                            <span asp-validation-for="PersonalMessage"></span>
                        </div>
                    </div>

                    @if (Model.DisplayCaptcha)
                    {
                    <div class="form-group">
                        <div class="captcha-box col-sm-offset-3 col-md-offset-3 col-md-4">
                            <nop-captcha />
                        </div>
                    </div>
                    }
                    <div class="form-group">
                        <div>
                            <div class="col-sm-offset-3 col-md-offset-3 col-md-3">
                                <button type="submit" name="send-email" class="btn btn-primary send-email-a-friend-button">@T("Wishlist.EmailAFriend.Button")</button>
                            </div>
                        </div>
                    </div>

                </div>

            </form>
        }
    </div>
</div>
