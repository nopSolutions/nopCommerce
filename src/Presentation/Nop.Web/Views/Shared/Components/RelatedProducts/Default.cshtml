@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <section class="related-products-grid product-grid">
        <h2 class="title">
            @T("Products.RelatedProducts")
        </h2>
        <div class="item-grid">
            @foreach (var item in Model)
            {
                <div class="item-box">@await Html.PartialAsync("_ProductBox", item)</div>
            }
        </div>
    </section>
}