@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="also-purchased-products-grid product-grid">
        <h2 class="title">
            @T("Products.AlsoPurchased")
        </h2>
        <div class="item-grid">
            @foreach (var item in Model)
            {
                <div class="item-box">@await Html.PartialAsync("_ProductBox", item)</div>
            }
        </div>
    </div>
}