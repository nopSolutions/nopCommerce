@model PasswordRecoveryConfirmModel
@{
    Layout = "~/Views/Shared/_Root.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
}
@using Nop.Web.Framework;
@using Nop.Web.Models.Customer;
<div class="password-recovery-page">
    <div class="page-title">
        <h1>@T("Account.PasswordRecovery")</h1>
    </div>
    <div class="clear">
    </div>
    <div class="body">
        @if (!String.IsNullOrEmpty(Model.Result))
        {
            <strong>
                @Model.Result
            </strong>
        }
        @if (!Model.SuccessfullyChanged)
        {
            using (Html.BeginForm())
            {
            <div>
                @Html.LabelFor(model => model.NewPassword)
                @Html.EditorFor(model => model.NewPassword)
                @Html.ValidationMessageFor(model => model.NewPassword)
            </div>
            <div>
                @Html.LabelFor(model => model.ConfirmNewPassword)
                @Html.EditorFor(model => model.ConfirmNewPassword)
                @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
            </div>
            <input type="submit" id="set-password" name="set-password" value="@T("Account.PasswordRecovery.ChangePasswordButton")" />
            }
        }
    </div>
</div>
