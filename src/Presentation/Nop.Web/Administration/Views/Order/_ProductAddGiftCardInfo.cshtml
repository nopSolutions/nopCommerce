@model OrderModel.AddOrderProductModel.GiftCardModel

@if (Model.IsGiftCard)
{
    //Actually just a copy of \Presentation\Nop.Web\Views\Catalog\_GiftCardInfo.cshtml
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    <div class="label-wrapper">
                        <label class="control-label">@T("Admin.GiftCards.Fields.RecipientName")</label>
                        <span class="required">*</span>
                        <div class="ico-help" title="@T("Admin.GiftCards.Fields.RecipientName.Hint")">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    @Html.NopEditorFor(model => model.RecipientName)
                </div>
            </div>
            @if (Model.GiftCardType == Nop.Core.Domain.Catalog.GiftCardType.Virtual)
            {
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="label-wrapper">
                            <label class="control-label">@T("Admin.GiftCards.Fields.RecipientEmail")</label>
                            <span class="required">*</span>
                            <div class="ico-help" title="@T("Admin.GiftCards.Fields.RecipientEmail.Hint")">
                                <i class="fa fa-question-circle"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.NopEditorFor(model => model.RecipientEmail)
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="col-md-3">
                    <div class="label-wrapper">
                        <label class="control-label">@T("Admin.GiftCards.Fields.SenderName")</label>
                        <span class="required">*</span>
                        <div class="ico-help" title="@T("Admin.GiftCards.Fields.SenderName.Hint")">
                            <i class="fa fa-question-circle"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    @Html.NopEditorFor(model => model.SenderName)
                </div>
            </div>
            @if (Model.GiftCardType == Nop.Core.Domain.Catalog.GiftCardType.Virtual)
            {
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="label-wrapper">
                            <label class="control-label">@T("Admin.GiftCards.Fields.SenderEmail")</label>
                            <span class="required">*</span>
                            <div class="ico-help" title="@T("Admin.GiftCards.Fields.SenderEmail.Hint")">
                                <i class="fa fa-question-circle"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.NopEditorFor(model => model.SenderEmail)
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.Message)
                </div>
                <div class="col-md-6">
                    @Html.NopTextAreaFor(model => model.Message)
                </div>
            </div>
        </div>
    </div>
}
