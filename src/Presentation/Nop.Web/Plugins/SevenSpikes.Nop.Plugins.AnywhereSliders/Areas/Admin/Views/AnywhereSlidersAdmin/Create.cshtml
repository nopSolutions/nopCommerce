@using SevenSpikes.Nop.Plugins.AnywhereSliders.Areas.Admin.Models.Sliders

@model SliderModel
@{
    Layout = AdminViewLocations.AdminLayoutViewPath;

    NopHtml.SetActiveMenuItemSystemName("SevenSpikes.Plugins.AnywhereSliders.Admin.Submenus.ManageSliders");
}

<form method="post">
    <nop-antiforgery-token />

    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Common.AddNew")
            <small><i class="fa fa-arrow-circle-left"></i><a asp-action="List">@T("SevenSpikes.Plugins.AnywhereSliders.Admin.Slider.BackToList")</a></small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn bg-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>

    @await Html.PartialAsync(Views.CreateOrUpdate, Model)
</form>
