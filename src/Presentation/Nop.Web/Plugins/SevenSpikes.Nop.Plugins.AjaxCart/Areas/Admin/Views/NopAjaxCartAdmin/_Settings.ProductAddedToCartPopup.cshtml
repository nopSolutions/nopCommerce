        </div>
        <div class="col-md-9">
            <nop-editor asp-for="ProductAddedToCartImageSize" />
            <span asp-validation-for="ProductAddedToCartImageSize"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="EnableRelatedProductsInPopup_OverrideForStore" asp-input="EnableRelatedProductsInPopup" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
