            <nop-editor asp-for="EnableRelatedProductsInPopup" />
            <span asp-validation-for="EnableRelatedProductsInPopup"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="NumberOfRelatedProductsInPopup_OverrideForStore" asp-input="NumberOfRelatedProductsInPopup" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="NumberOfRelatedProductsInPopup" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="NumberOfRelatedProductsInPopup" />
            <span asp-validation-for="NumberOfRelatedProductsInPopup"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="EnableCrossSellProductsInPopup_OverrideForStore" asp-input="EnableCrossSellProductsInPopup" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="EnableCrossSellProductsInPopup" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="EnableCrossSellProductsInPopup" />
            <span asp-validation-for="EnableCrossSellProductsInPopup"></span>
        </div>
    </div>
