@model NopAjaxCartSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="ProductAddedToCartImageSize_OverrideForStore" asp-input="ProductAddedToCartImageSize" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
