        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="NumberOfCrossSellProductsInPopup_OverrideForStore" asp-input="NumberOfCrossSellProductsInPopup" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="NumberOfCrossSellProductsInPopup" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="NumberOfCrossSellProductsInPopup" />
            <span asp-validation-for="NumberOfCrossSellProductsInPopup"></span>
        </div>
    </div>
</div>