                entityId = (await topicService.GetTopicBySystemNameAsync("ShippingInfo"))?.Id ?? 0;

                <script>
                    var localized_data = {
                        Done: '@T("Admin.ConfigurationSteps.Done")',

                        TopicListTopics1Title: '@T("Admin.ConfigurationSteps.TopicList.Topics1.Title")',
