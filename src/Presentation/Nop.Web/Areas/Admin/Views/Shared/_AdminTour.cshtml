                    };
                </script>
                break;

            case TourStep.EmailAccountList:
                Html.AddScriptParts("~/js/admintour/admin.tour.emailaccountlist.js");
                entityId = (await emailAccountService.GetAllEmailAccountsAsync()).FirstOrDefault()?.Id ?? 0;

                <script>
