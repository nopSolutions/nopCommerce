@model MaintenanceModel

    <div class="card-body">
        <div class="form-group row">
            <div class="col-md-6">
                <nop-label asp-for="DeleteAlreadySentQueuedEmails.StartDate" />
            </div>
            <div class="col-md-6">
                <nop-editor asp-for="DeleteAlreadySentQueuedEmails.StartDate" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">
                <nop-label asp-for="DeleteAlreadySentQueuedEmails.EndDate" />
            </div>
            <div class="col-md-6">
                <nop-editor asp-for="DeleteAlreadySentQueuedEmails.EndDate" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-6 offset-md-6">
                <button type="submit" name="delete-already-sent-queued-emails" class="btn btn-default">
                    <i class="far fa-trash-can"></i>
                    @T("Admin.Common.Delete")
                </button>
            </div>
        </div>
        @if (Model.DeleteAlreadySentQueuedEmails.NumberOfDeletedEmails.HasValue)
        {
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="alert alert-success alert-dismissible no-margin">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        @string.Format(T("Admin.System.Maintenance.DeleteAlreadySentQueuedEmails.TotalDeleted").Text, Model.DeleteAlreadySentQueuedEmails.NumberOfDeletedEmails.Value)
                    </div>
                </div>
            </div>
        }
    </div>