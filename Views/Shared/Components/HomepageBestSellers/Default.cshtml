@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <section class="product-grid bestsellers">
        <h2 class="title">
            @T("Bestsellers")
        </h2>
        <div class="item-grid">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        </div>
    </section>
}