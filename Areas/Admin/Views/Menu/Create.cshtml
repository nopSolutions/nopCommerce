@model MenuModel
@{
    //page title
    ViewBag.PageTitle = T("Admin.ContentManagement.Menus.AddNew").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Menus");
}

<form asp-controller="Menu" asp-action="Create" method="post" id="menu-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.ContentManagement.Menus.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.ContentManagement.Menus.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>